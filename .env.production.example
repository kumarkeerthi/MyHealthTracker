# Copy to .env.production and edit before first deployment.

# Domain used by Nginx + Certbot.
DOMAIN=app.example.com
LETSENCRYPT_EMAIL=ops@example.com

# Backend runtime URL configuration.
APP_DOMAIN=app.example.com
REQUIRE_HTTPS=true
CORS_ALLOWED_ORIGINS=https://app.example.com
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# Database.
POSTGRES_DB=metabolic_db
POSTGRES_USER=metabolic_user
POSTGRES_PASSWORD=replace-with-long-random-password
DATABASE_URL=postgresql+psycopg2://metabolic_user:replace-with-long-random-password@db:5432/metabolic_db

# Redis (optional but recommended in production).
REDIS_PASSWORD=replace-with-long-random-password
REDIS_URL=redis://:replace-with-long-random-password@redis:6379/0

# Application security.
JWT_SECRET=replace-with-64-char-random-value
HEALTH_SYNC_SIGNING_SECRET=replace-with-64-char-random-value

# Optional provider key.
OPENAI_API_KEY=sk-replace-me
OPENAI_MODEL=gpt-4o-mini
