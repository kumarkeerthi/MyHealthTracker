# Runtime
ENVIRONMENT=production
DOMAIN=app.example.com

# Database / cache
POSTGRES_DB=metabolic
POSTGRES_USER=metabolic
DATABASE_URL=postgresql+psycopg2://metabolic:CHANGE_ME@db:5432/metabolic
REDIS_URL=redis://:CHANGE_ME@redis:6379/0

# Async workers
CELERY_BROKER_URL=redis://:CHANGE_ME@redis:6379/0
CELERY_RESULT_BACKEND=redis://:CHANGE_ME@redis:6379/0

# AI + app settings
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
JWT_SECRET=CHANGE_ME
APPLE_HEALTH_SYNC_ENABLED=false
WHATSAPP_ENABLED=false
SSL_EMAIL=ops@example.com

# Frontend
NEXT_PUBLIC_API_BASE_URL=https://app.example.com/api

# Existing media settings
MAX_FOOD_IMAGE_BYTES=1500000
FOOD_IMAGE_UPLOAD_DIR=app/data/uploads
FOOD_IMAGE_PUBLIC_BASE_URL=https://s3.local/myhealthtracker/food-images

# Bootstrap admin account displayed by deploy.sh
ADMIN_DEFAULT_USER=admin
ADMIN_DEFAULT_PASSWORD=CHANGE_ME
